<Window x:Class="ProductManager.Windows.AddOrderProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ProductManager.Windows"
        mc:Ignorable="d"
        Title="AddOrderProductWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFF7FF">
        <StackPanel Orientation="Vertical" Margin="10">
            <StackPanel Width="780" Height="350" VerticalAlignment="Top">
                <DataGrid Background="#FFF7FF" Name="addOrderDataGrid">

                </DataGrid>
            </StackPanel>
            <StackPanel Height="50">
                <Button Width="120" Height="30" Style="{StaticResource MaterialDesignRaisedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="8" BorderThickness="2" BorderBrush="Violet" 
                                    Background="Lavender" Foreground="Black" ToolTip="Select" x:Name="btnSelect" 
                                    Click="btnSelect_Click" Content="Select" Margin="10">
                </Button>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
